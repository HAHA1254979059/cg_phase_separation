    <name>NB_AA</name>
    <type1>A</type1>
    <type2>A</type2>
    <min>0.0</min>
    <max>2.0</max>
    <step>0.01</step>
    <inverse>
      <target>NB_AA.dist.tgt</target>
      <!-- update this potential each iteration -->
      <do_potential>1</do_potential>
      <!-- optional post‐processing of dU before addition (empty means no filter) -->
      <post_update></post_update>
      <!-- check for convergence after each update 【368157324134565†L41-L49】 -->
      <post_add>convergence</post_add>
      <gromacs>
        <table>table_NB_AA.xvg</table>
      </gromacs>
    </inverse>
  </non-bonded>

