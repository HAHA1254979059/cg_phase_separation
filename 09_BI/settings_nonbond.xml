  <!-- General inverse options: these control the iterative Boltzmann inversion
       procedure.  See the hexane tutorial for guidance on choosing values【368157324134565†L109-L141】. -->
  <inverse>
    <!-- thermal energy in GROMACS units (kB*T at 300 K ≈ 2.4943) -->
    <kBT>2.49435</kBT>
    <!-- use GROMACS for coarse-grained simulations -->
    <program>gromacs</program>
    <gromacs>
      <!-- frames to discard at beginning of each CG-MD run -->
      <equi_time>20</equi_time>
      <!-- bin width for tabulated potentials -->
      <table_bins>0.002</table_bins>
      <!-- maximum potential energy; prevents overflow in some gromacs versions -->
      <pot_max>1000000</pot_max>
      <!-- extend the tabulated potentials to this distance (nm) -->
      <table_end>2.5</table_end>
    </gromacs>
    <!-- specify both mapping files (semicolon separated) as in the documentation
         where multiple mapping schemes are combined【837148222953914†L61-L64】 -->
    <map>mapping_pvcn.xml;mapping_ptb7.xml</map>
    <!-- files copied to each new run directory by csg_inverse -->
    <filelist>grompp.mdp topol.top table.xvg index.ndx</filelist>
    <!-- number of IBI iterations to perform (adjust as needed) -->
    <iterations_max>300</iterations_max>
    <!-- convergence check: stop if changes in potentials fall below limit -->
    <convergence_check>
      <type>default</type>
      <limit>0.001</limit>
    </convergence_check>
    <!-- choose iterative method (ibi, imc, re, ...); here we use IBI -->
    <method>ibi</method>
    <log_file>inverse.log</log_file>
    <restart_file>restart_points.log</restart_file>
  </inverse>
